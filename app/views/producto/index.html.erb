
<h1>Todos los Productos</h1>
		
<section>
			<%for producto in @productos %>
			 <ul>
			 	<li><h6><%=producto.titular%></h6> </li>
			 	<li>
				 	<%if producto.tipoProducto == "codigo"%>
				 		<a href="/producto/show?id=<%= producto.id %>"><%= image_tag(producto.imagen, :alt => "Codigo") %></a>
				 	<%else%>
				 		<a href="/producto/show?id=<%= producto.id %>"><%= image_tag(producto.imagen, :alt => "entrada") %></a>
				 	<%end%>
			 	</li>	 	
			 	<li>
			 		<a href="/producto/show?id=<%= producto.id %>">Detalles del producto</a> 
			 	</li>
			 </ul>   		  
    		<%end%>
 </section>  
  		
