
<div class="container">
	<div class="row">
		<%for producto in @productos %>
		<%if producto.stock>0 && producto.estado=='activo'%>
		<a href="/producto/show?id=<%= producto.id %>">
		<div class="col-sm-6 col-md-4" style="box-shadow: 10px 10px 5px #888888">
			<p>
				<%= producto.titular%>
			</p>
			<p>
				Unidades disponibles: <%= producto.stock%>
			</p>
			<a href="/producto/show?id=<%= producto.id %>"><%= image_tag producto.imagen.url(:thumb)%></a>
		</div></a>
		<%end%>
		<%end%>
	</div>
	
</div>

<p id="ref_admin">
		<a href="/admin">Admin</a>
	</p>