
<div class="container">
	<div class="row">
		<%for producto in @productos %>
		<%if producto.stock>0 && producto.estado=='activo'%>

		<div class="col-sm-6 col-md-4">
			<p>
				<%= producto.titular%>
			</p>
			<p>
				Unidades disponibles: <%= producto.stock%>
			</p>
			<a href="/producto/show?id=<%= producto.id %>"><%= image_tag producto.imagen.url(:thumb)%></a>
		</div>
		<%end%>
		<%end%>
	</div>
	<p id="ref_admin">
		<a href="/admin">Admin</a>
	</p>
</div>