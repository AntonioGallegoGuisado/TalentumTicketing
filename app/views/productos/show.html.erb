<div class="container">
<div class="col-md-12">
	<div class="row">
		<div class="col-sm-2">
			<%= image_tag @producto.imagen.url(:medium)%>
		</div>
		<div class="col-sm-10">
			<%= @producto.titular %>
			<br>

			<%= @producto.descripcion%>
			<br>
			<%= @producto.precio%>
			<br>

			<br>
			<a href="/pedidos/new?id=<%= @producto.id %>"><button type="submit" class="btn btn-info">Ir a Comprar</button></a>
			<a href="/productos/index">Volver</a>
		</div>
	</div>
</div>
</div>





