<div class="container" style="margin-top:4em;">
<div class="col-md-12">
	<div class="row">
		<div class="col-sm-2">
			<%if @producto.imagen_file_name%>
				<%= image_tag @producto.imagen.url(:medium), class: "img-responsive aspect"%>
				
			<%else%>
				<img src="<%=asset_path ('ticket.PNG')%>" class= 'img-responsive aspect'>
			<%end%>
			
		</div>
		<div class="col-sm-10">
			<strong><%= @producto.titular %> </strong>
			<br>

			<%= @producto.descripcion%>
			<br>
			<%= @producto.precio%> euros
			<br>

			<br>
			<a href="/pedidos/new?id=<%= @producto.id %>"><button type="submit" class="btn btn-info">Ir a Comprar</button></a>
			<a href="/productos/index"><button type="submit" class="btn btn-default">Volver</button></a>
		</div>
	</div>
</div>
</div>





